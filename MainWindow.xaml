<Window x:Class="NextExplorer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NextExplorer - フォルダ管理"
        Height="600" Width="900"
        MinHeight="400" MinWidth="700"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Menu Grid.Row="0" Background="#F5F5F5">
            <MenuItem Header="ファイル(_F)">
                <MenuItem Header="更新(_R)" Command="{Binding RefreshFoldersCommand}" InputGestureText="Ctrl+R"/>
                <Separator/>
                <MenuItem Header="終了(_X)" Click="ExitMenuItem_Click" InputGestureText="Alt+F4"/>
            </MenuItem>
            <MenuItem Header="編集(_E)">
                <MenuItem Header="セッション保存(_S)" Command="{Binding SaveSessionCommand}" InputGestureText="Ctrl+S"/>
                <MenuItem Header="セッション復元(_L)" Command="{Binding LoadSessionCommand}" InputGestureText="Ctrl+O"/>
                <MenuItem Header="セッション削除(_D)" Command="{Binding DeleteSessionCommand}" InputGestureText="Delete"/>
            </MenuItem>
            <MenuItem Header="表示(_V)">
                <MenuItem Header="フォルダ更新(_R)" Command="{Binding RefreshFoldersCommand}"/>
            </MenuItem>
            <MenuItem Header="ヘルプ(_H)">
                <MenuItem Header="バージョン情報(_A)" Click="AboutMenuItem_Click"/>
            </MenuItem>
        </Menu>

        <!-- Toolbar -->
        <ToolBar Grid.Row="1" Background="#F0F0F0">
            <Button Command="{Binding RefreshFoldersCommand}" ToolTip="フォルダを更新">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="🔄" Margin="0,0,5,0"/>
                    <TextBlock Text="更新"/>
                </StackPanel>
            </Button>
            <Separator/>
            <Button Command="{Binding SaveSessionCommand}" ToolTip="現在のフォルダをセッションとして保存">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="💾" Margin="0,0,5,0"/>
                    <TextBlock Text="保存"/>
                </StackPanel>
            </Button>
            <Button Command="{Binding LoadSessionCommand}" ToolTip="選択したセッションを復元">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="📂" Margin="0,0,5,0"/>
                    <TextBlock Text="復元"/>
                </StackPanel>
            </Button>
            <Button Command="{Binding DeleteSessionCommand}" ToolTip="選択したセッションを削除">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="🗑️" Margin="0,0,5,0"/>
                    <TextBlock Text="削除"/>
                </StackPanel>
            </Button>
        </ToolBar>

        <!-- Main Content -->
        <Grid Grid.Row="2" Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="3*"/>
            </Grid.RowDefinitions>

            <!-- Current Folders Panel -->
            <GroupBox Grid.Row="0" Header="現在開かれているフォルダ" Padding="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <ListView Grid.Row="0" 
                              ItemsSource="{Binding CurrentFolders}"
                              SelectionMode="Multiple">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="種類" Width="60">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="📁" HorizontalAlignment="Center"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="フォルダパス" Width="400" DisplayMemberBinding="{Binding Path}"/>
                                <GridViewColumn Header="状態" Width="80" DisplayMemberBinding="{Binding StatusText}"/>
                                <GridViewColumn Header="種類" Width="80" DisplayMemberBinding="{Binding TypeText}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,5,0,0">
                        <TextBox Text="{Binding NewSessionName, UpdateSourceTrigger=PropertyChanged}" 
                                 Width="200" 
                                 Margin="5,0"
                                 VerticalAlignment="Center">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Style.Triggers>
                                        <Trigger Property="Text" Value="">
                                            <Setter Property="Background">
                                                <Setter.Value>
                                                    <VisualBrush AlignmentX="Left" AlignmentY="Center" Stretch="None">
                                                        <VisualBrush.Visual>
                                                            <TextBlock Text="セッション名を入力..." 
                                                                     Foreground="#999" 
                                                                     Margin="5,0"/>
                                                        </VisualBrush.Visual>
                                                    </VisualBrush>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                        <Button Command="{Binding SaveSessionCommand}" 
                                Content="保存" 
                                Width="60"
                                Margin="5,0"/>
                    </StackPanel>
                </Grid>
            </GroupBox>

            <GridSplitter Grid.Row="1" 
                          HorizontalAlignment="Stretch" 
                          VerticalAlignment="Stretch" 
                          Background="#E0E0E0"/>

            <!-- Saved Sessions Panel -->
            <GroupBox Grid.Row="2" Header="保存されたセッション" Padding="5">
                <ListView ItemsSource="{Binding SavedSessions}"
                          SelectedItem="{Binding SelectedSession}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="" Width="30">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="{Binding FavoriteIcon}" 
                                                Command="{Binding DataContext.ToggleFavoriteCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                                CommandParameter="{Binding}"
                                                Background="Transparent" 
                                                BorderThickness="0"
                                                Width="25" Height="25"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="セッション名" Width="200" DisplayMemberBinding="{Binding Name}"/>
                            <GridViewColumn Header="フォルダ数" Width="80" DisplayMemberBinding="{Binding FolderCount}"/>
                            <GridViewColumn Header="使用回数" Width="80" DisplayMemberBinding="{Binding UsageCount}"/>
                            <GridViewColumn Header="最終使用" Width="120" DisplayMemberBinding="{Binding LastUsedText}"/>
                            <GridViewColumn Header="操作" Width="100">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="復元" 
                                                    Command="{Binding DataContext.LoadSpecificSessionCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                                    CommandParameter="{Binding}"
                                                    Width="50" Height="25" 
                                                    Margin="2"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                    <ListView.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="復元" Command="{Binding LoadSessionCommand}"/>
                            <MenuItem Header="お気に入りに追加/削除" Command="{Binding ToggleFavoriteCommand}" CommandParameter="{Binding SelectedSession}"/>
                            <Separator/>
                            <MenuItem Header="削除" Command="{Binding DeleteSessionCommand}"/>
                        </ContextMenu>
                    </ListView.ContextMenu>
                </ListView>
            </GroupBox>
        </Grid>

        <!-- Status Bar -->
        <StatusBar Grid.Row="3" Background="#F0F0F0">
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding StatusMessage}" Margin="5,0"/>
                    <TextBlock Text="●" Foreground="Green" Margin="10,0,5,0" Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    <TextBlock Text="読み込み中..." Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
    </Grid>

    <!-- Key Bindings -->
    <Window.InputBindings>
        <KeyBinding Command="{Binding RefreshFoldersCommand}" Key="R" Modifiers="Ctrl"/>
        <KeyBinding Command="{Binding SaveSessionCommand}" Key="S" Modifiers="Ctrl"/>
        <KeyBinding Command="{Binding LoadSessionCommand}" Key="O" Modifiers="Ctrl"/>
        <KeyBinding Command="{Binding DeleteSessionCommand}" Key="Delete"/>
    </Window.InputBindings>
</Window>